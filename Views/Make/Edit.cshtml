@model BykeSellingOnlinePlatefrom.Models.Make
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-info align-content-center">Edit Make View Page</h1>

<div>
    <form method="post" action="Edit">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-2">
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" asp-route-id="@Model.Id" value="Update" />
                <a class="btn btn-dark" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</div>

